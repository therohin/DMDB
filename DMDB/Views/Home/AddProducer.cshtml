<!-- Modal -->
<div class="modal fade" id="addProducerModal"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Producer</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <strong data-ng-show="showError" dclass="alert alert-danger">{{error}}</strong>
                        <form name="addProducerForm" data-ng-hide="loading"  class="form-horizontal" novalidate>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Name:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="producer_name" placeholder="Full Name" data-ng-model="newProducer.Name" ng-pattern ="/^[a-zA-Z\s]*$/" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sex" class="col-sm-2 control-label">Sex:</label>
                                <div class="col-sm-10">
                                    <select data-ng-options="sex as sex for sex in sexList" class="form-control" id="producer_sex" placeholder="Sex" data-ng-model="newProducer.Sex" required>
                                        <option value="" selected>Select</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="dob" class="col-sm-2 control-label">DOB:</label>
                                <div class="col-sm-10">
                                    <input type="date"  class="form-control" id="producer_dob" placeholder="Date Of Birth" data-ng-model="newProducer.DOB">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="bio" class="col-sm-2 control-label">Bio:</label>
                                <div class="col-sm-10">
                                    <textarea rows="4" cols="30" class="form-control" id="producer_bio" placeholder="Bio" data-ng-model="newProducer.Bio"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer form-group">
                                <input type="submit" value="Save" class="btn btn-primary" data-ng-disabled="addProducerForm.$invalid" data-ng-click="addProducer()" />
                                <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal"/>
                            </div>
                            <br />
                        </form>
                        <div data-ng-show="loading">
                            <img src="~/Content/images/ajax-loader.gif" class="ajax-loader" />
                        </div>
                    </div>
                </div>


            </div>
            
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


